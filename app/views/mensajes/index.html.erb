<h2 class="text-muted"><%= t '.title' %></h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= Mensaje.human_attribute_name 'cuerpo' %></th>
      <th><%= Mensaje.human_attribute_name 'persona' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensajes.each do |mensaje| %>
      <tr>
        <td><%= truncate mensaje.cuerpo %></td>
        <td><%= link_to mensaje.persona, mensaje.persona %></td>
        <td>
          <%= link_to mensaje, title: t('navigation.show') do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_mensaje_path(mensaje), title: t('navigation.edit') do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </td>
        <td>
          <%= link_to mensaje, title: t('navigation.destroy'), method: :delete, data: { confirm: t('messages.confirm') } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_mensaje_path, class: 'btn btn-primary' %>
