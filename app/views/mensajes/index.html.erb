<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= Mensaje.human_attribute_name 'cuerpo' %></th>
      <th><%= Mensaje.human_attribute_name 'persona' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensajes.each do |mensaje| %>
      <tr>
        <td><%= truncate mensaje.cuerpo %></td>
        <td><%= link_to mensaje.persona, mensaje.persona %></td>
        <td><%= link_to t('navigation.show'), mensaje %></td>
        <td><%= link_to t('navigation.edit'), edit_mensaje_path(mensaje) %></td>
        <td><%= link_to t('navigation.destroy'), mensaje, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_mensaje_path %>
